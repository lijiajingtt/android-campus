<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <View
        android:id="@+id/paddingView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_title"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/publish_return"
                android:layout_alignParentLeft="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="12dp"
                android:src="@drawable/publish_return_arrow" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="发布需求 "
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/publish_send"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_margin="12dp"
                android:layout_alignParentRight="true"
                android:text="发送"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/publish_img_tag"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择标签"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="#000"/>
        </LinearLayout>

        <GridView
            android:id="@+id/publish_grid_tag"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="15dp"
            android:numColumns="4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/publish_img_detail"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目详情"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="#000"/>
        </LinearLayout>
        <GridView
            android:id="@+id/publish_grid_detail"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="15dp"
            android:layout_marginTop="10dp"
            android:numColumns="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/publish_img_clock"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报名时间"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/publish_btn_left_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2017"
                    android:gravity="center"
                    android:background="@drawable/tab_publish_btn1"/>
                <EditText
                    android:id="@+id/publish_btn_center_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="7"
                    android:gravity="center"
                    android:background="@drawable/tab_publish_btn2"/>
                <EditText
                    android:id="@+id/publish_btn_right_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="5"
                    android:gravity="left|center"
                    android:background="@drawable/tab_publish_btn3"/>
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="一"
                android:gravity="center"
                android:textColor="@color/highGray"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/publish_btn_left_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2017"
                    android:gravity="center"
                    android:background="@drawable/tab_publish_btn1"/>
                <EditText
                    android:id="@+id/publish_btn_center_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="7"
                    android:gravity="center"
                    android:background="@drawable/tab_publish_btn2"/>
                <EditText
                    android:id="@+id/publish_btn_right_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="8"
                    android:gravity="left|center"
                    android:background="@drawable/tab_publish_btn3"/>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_centerInParent="true">

            <EditText
                android:id="@+id/custom_edittext"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="@drawable/curved_border"
                android:gravity="center"
                android:hint="请输入详细信息"
                android:paddingBottom="24dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="17dp"
                android:textColor="#000000"
                android:textColorHint="#AEAEAE"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/other_char_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/custom_edittext"
                android:layout_alignParentBottom="true"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:text="0"
                android:textColor="#AEAEAE"
                android:textSize="14sp"
                android:visibility="gone"></TextView>

            <TextView
                android:id="@+id/left_word_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:text="250字"
                android:textColor="#000000"
                android:textSize="7sp"></TextView>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView>